            </div>

            <div class="row gy-4">
                <div class="col-lg-7 position-relative about-img" style="background-image: url(@Model.LeftImageMedia.PhotoPath) ;" data-aos="fade-up" data-aos-delay="150">
                    <div class="call-us position-absolute">
                        <h4><localize key="Order Now" /></h4>
                        @foreach (var phone in Model.BusinessInfo.PhoneNumbers)
                        {
                           <a href="tel:@phone.FormattedNumber"> <p>@phone.FormattedNumber</p></a>

                        }
                    </div>
                </div>
                <div class="col-lg-5 d-flex align-items-end" data-aos="fade-up" data-aos-delay="300">
                    <div class="content ps-0 ps-lg-5">
                        <p class="fst-italic">
                            <localize key="Parghraph2" />
                        </p>
                        <ul>
                            <li><i class="bi bi-check2-all"></i> <localize key="Item1" /></li>
                            <li><i class="bi bi-check2-all"></i> <localize key="Item2" /></li>
                            <li><i class="bi bi-check2-all"></i> <localize key="Item3" /></li>
                        </ul>
                        <p>
                            
                            <localize key="Parghraph3" />
                        </p>

                        <div class="position-relative mt-4">
                            <img src="@Model.RightImageMedia.PhotoPath" class="img-fluid" alt="@Model.RightImageMedia.Alt">

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section><!-- End About Section -->
    <!-- ======= Why Us Section ======= -->
    <section id="why-us" class="why-us section-bg">
        <div class="container" data-aos="fade-up">

            <div class="row gy-4">

                <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
                    <div class="why-box">
                        <h3> <localize key="Why Choose Yummy?" /></h3>
                        <p>
                            <localize key="Parghraph4" />
                           
                        </p>
                        
                    </div>
                </div><!-- End Why Box -->

                <div class="col-lg-8 d-flex align-items-center">
                    <div class="row gy-4">

                        <div class="col-xl-4" data-aos="fade-up" data-aos-delay="200">
                            <div class="icon-box d-flex flex-column justify-content-center align-items-center">
                                <i class="bi bi-clipboard-data"></i>
                                <h4> <localize key="WhyChooseUs1Title" /></h4>
                                <p> <localize key="WhyChooseUs1SubTitle" /></p>
                            </div>
                        </div><!-- End Icon Box -->

                        <div class="col-xl-4" data-aos="fade-up" data-aos-delay="300">
                            <div class="icon-box d-flex flex-column justify-content-center align-items-center">
                                <i class="bi bi-gem"></i>
                                <h4> <localize key="WhyChooseUs2Title" /></h4>
                                <p><localize key="WhyChooseUs2SubTitle" /></p>
                            </div>
                        </div><!-- End Icon Box -->

                        <div class="col-xl-4" data-aos="fade-up" data-aos-delay="400">
                            <div class="icon-box d-flex flex-column justify-content-center align-items-center">
                                <i class="bi bi-inboxes"></i>
                                <h4> <localize key="WhyChooseUs3Title" /></h4>
                                <p> <localize key="WhyChooseUs3SubTitle" /></p>
                            </div>
                        </div><!-- End Icon Box -->

                    </div>
                </div>

            </div>

        </div>
    </section><!-- End Why Us Section -->
    <!-- ======= Menu Section ======= -->
    <section id="menu" class="menu">
        <div class="container" data-aos="fade-up">

            <div class="section-header">
                <h2><localize key="Our Menu" /></h2>
                <p><localize key="Check Our" /> <span><localize key="Yummy Menu" /></span></p>
            </div>

            <ul class="nav nav-tabs d-flex justify-content-center" data-aos="fade-up" data-aos-delay="200">

                @foreach (var (menusection, index) in Model.Menu.WithIndex())
                {

                    <li class="nav-item">
                        <a class="nav-link @(index==0? "active show":"")" data-bs-toggle="tab" data-bs-target="#_@menusection.Id">
                            <h4>@menusection.Name</h4>
                        </a>
                    </li>

                    <!-- End tab nav item -->
                }



            </ul>

            <div class="tab-content" data-aos="fade-up" data-aos-delay="300">

                @foreach (var (menusection, index) in Model.Menu.WithIndex())
                {
                    <div class="tab-pane fade @(index==0? "active show":"")" id="_@menusection.Id">

                        <div class="tab-header text-center">
                            <p> <localize key="Menu" /></p>
                            <h3>@menusection.Name</h3>
                        </div>

                        <div class="row gy-5">
                            @foreach (var menuItem in menusection.MenuItems)
                            {
                                <div class="col-lg-4 menu-item">
                                    <a href="@menuItem.PhotoPath" class="glightbox"><img src="@menuItem.PhotoPath" class="menu-img img-fluid" alt="@menuItem.Name"></a>
                                    <h4>@menuItem.Name</h4>
                                    @if (!string.IsNullOrEmpty(menuItem.Description))
                                    {
                                        <p class="ingredients">
                                            @menuItem.Description
                                        </p>
                                    }
                                    <p class="price">
                                        @menuItem.FormattedPrice
                                    </p>
                                </div>

                                <!-- Menu Item -->
                            }



                        </div>
                    </div>

                    <!-- End Starter Menu Content -->
                }



            </div>

        </div>
    </section><!-- End Menu Section -->
    <!-- ======= Testimonials Section ======= -->
