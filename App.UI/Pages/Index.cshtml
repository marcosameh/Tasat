                    {
                        <div class="swiper-slide">
                            <div class="testimonial-item">
                                <div class="row gy-4 justify-content-center">
                                    <div class="col-lg-8">
                                        <div class="testimonial-content">
                                            <p>
                                                <i class="bi bi-quote quote-icon-left"></i>
                                                @testmoinal.Comment
                                                <i class="bi bi-quote quote-icon-right"></i>
                                            </p>
                                            <h3>@testmoinal.Name</h3>
                                            @*  <h4>@testmoinal.</h4>*@
                                            @* <div class="stars">
                                        <i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i>
                                        </div>*@
                                        </div>
                                    </div>
                                    @*   <div class="col-lg-2 text-center">
                                <img src="/assets/img/testimonials/testimonials-1.jpg" class="img-fluid testimonial-img" alt="">
                                </div>*@
                                </div>
                            </div>
                        </div>

                        <!-- End testimonial item -->
                    }



                </div>
                <div class="swiper-pagination"></div>
            </div>

        </div>
    </section><!-- End Testimonials Section -->
    <!-- ======= Events Section ======= -->
    <section id="events" class="events">
        <div class="container-fluid" data-aos="fade-up">

            <div class="section-header">
                <h2> <localize key="Events" /></h2>
                <p><localize key="Share" /> <span><localize key="Your Moments" /></span><localize key="In Our Restaurant" /> </p>
            </div>

            <div class="slides-3 swiper" data-aos="fade-up" data-aos-delay="100">
                <div class="swiper-wrapper">
                    @foreach (var item in Model.Events)
                    {

                        <div class="swiper-slide event-item d-flex flex-column justify-content-end" style="background-image: url('@item.PhotoPath')">
                            <h3>@item.Title</h3>

                            <p class="description">
                                @item.Body
                            </p>
                        </div>

                        <!-- End Event item -->
                    }



                </div>
                <div class="swiper-pagination"></div>
            </div>

        </div>
    </section><!-- End Events Section -->
    <!-- ======= Chefs Section ======= -->
    <section id="chefs" class="chefs section-bg">
        <div class="container" data-aos="fade-up">

            <div class="section-header">
                <h2> <localize key="Team" /></h2>
                <p><localize key="Our" /> <span> <localize key="Proffesional" /> </span><localize key="Team" /></p>
            </div>

            <div class="row gy-4">
                @foreach (var teamMember in Model.Team)
                {

                    <div class="col-lg-4 col-md-6 d-flex align-items-stretch" data-aos="fade-up" data-aos-delay="100">
                        <div class="chef-member">
                            <div class="member-img">
                                <img src="@teamMember.PhotoPath" class="img-fluid" alt="@teamMember.Alt">

                            </div>
                            <div class="member-info">
                                <h4>@teamMember.Name</h4>
                                <span>@teamMember.Posistion</span>

                            </div>
                        </div>
                    </div>

                    <!-- End Chefs Member -->
                }




            </div>

        </div>
    </section><!-- End Chefs Section -->
    <!-- ======= Gallery Section ======= -->
    <section id="gallery" class="gallery section-bg">
        <div class="container" data-aos="fade-up">

            <div class="section-header">
                <h2> <localize key="gallery" /></h2>
                <p><span><localize key="Our Gallery" /></span></p>
            </div>

            <div class="gallery-slider swiper">
                <div class="swiper-wrapper align-items-center">

                    @foreach (var photo in Model.Galleries)
                    {
                        <div class="swiper-slide"><a class="glightbox" data-gallery="images-gallery" href="@photo.LargePhotoPath"><img src="@photo.SmallPhotoPath" class="img-fluid" alt=""></a></div>
                    }

                </div>
                <div class="swiper-pagination"></div>
            </div>

        </div>
    </section><!-- End Gallery Section -->
    <!-- ======= Contact Section ======= -->

    <section id="contact" class="contact">
        <div class="container" data-aos="fade-up">
            <alert render-mode="Bootstrap5"></alert>
            <div class="section-header">
                <h2> <localize key="Contact" /></h2>
                <p> <localize key="Need Help?" /><span><localize key="Contact Us" /></span></p>
            </div>

            <div class="mb-3">
                <iframe style="border:0; width: 100%; height: 350px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d12097.433213460943!2d-74.0062269!3d40.7101282!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xb89d1fe6bc499443!2sDowntown+Conference+Center!5e0!3m2!1smk!2sbg!4v1539943755621" frameborder="0" allowfullscreen></iframe>
            </div><!-- End Google Maps -->

            <div class="row gy-4">

                <div class="col-md-6">
                    <div class="info-item  d-flex align-items-center">
                        <i class="icon bi bi-map flex-shrink-0"></i>
                        <div>
                            <h3> <localize key="Our Address" /></h3>
                            <p>@Model.BusinessInfo.Address</p>
                        </div>
                    </div>
                </div><!-- End Info Item -->

                <div class="col-md-6">
                    <div class="info-item d-flex align-items-center">
                        <i class="icon bi bi-envelope flex-shrink-0"></i>
                        <div>
                            <h3> <localize key="Email Us" /></h3>
                            <p>@Model.BusinessInfo.ContactUsEmail</p>
                        </div>
                    </div>
                </div><!-- End Info Item -->

                <div class="col-md-6">
                    <div class="info-item  d-flex align-items-center">
                        <i class="icon bi bi-telephone flex-shrink-0"></i>
                        <div>
                            <h3> <localize key="Call Us" /></h3>
                            @foreach (var phone in Model.BusinessInfo.PhoneNumbers)
                            {

                                <p>@phone.FormattedNumber</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- End Info Item -->

                <div class="col-md-6">
                    <div class="info-item  d-flex align-items-center">
                        <i class="icon bi bi-share flex-shrink-0"></i>
                        <div>
                            <h3> <localize key="Opening Hours" /></h3>
                            <div>
                                @Model.BusinessInfo.OpeningHours
                            </div>
                        </div>
                    </div>
                </div>

                <!-- End Info Item -->

            </div>

            <form method="post" role="form" class="php-email-form p-3 p-md-4">
                <div class="row">
                    <div class="col-xl-4 form-group">
                        <input type="text" asp-for="contactUsEmail.FullName" class="form-control" placeholder="Your Name" required>
                        <span class="text-bg-danger" asp-validation-for="contactUsEmail.FullName"></span>
                    </div>
                    <div class="col-xl-4 form-group">
                        <input type="email" class="form-control" asp-for="contactUsEmail.Email" placeholder="Your Email" required>
                        <span class="text-bg-danger" asp-validation-for="contactUsEmail.Email"></span>
                    </div>
                    <div class="col-xl-4 form-group">
                        <input type="text" class="form-control" asp-for="contactUsEmail.Phone" placeholder="Your Phone Number" required>
                        <span class="text-bg-danger" asp-validation-for="contactUsEmail.Phone"></span>
                    </div>
                </div>
                <div class="form-group">

                    <select class="form-control" id="Subject" asp-for="contactUsEmail.Subject">
                        <option value="" selected disabled>Subject</option>
                        <option value="Contact Us">Contact Us</option>
                        <option value="Order">Order</option>
                        <option value="Complain">Complain</option>
                    </select>
                    <span class="text-bg-danger" asp-validation-for="contactUsEmail.Subject"></span>
                </div>
                <div class="form-group">

                    <select class="form-control" id="Department" asp-for="contactUsEmail.Department">
                        <option value="" selected disabled>Select Department</option>
                        <option value="Chefs">Chefs</option>
                        <option value="Casher">Casher</option>
                        <option value="Staff">Delivery</option>
                    </select>

                </div>
                <div class="form-group">
                    <textarea class="form-control" asp-for="contactUsEmail.Message" rows="5" id="textArea" placeholder="Message" required></textarea>
                    <span class="text-bg-danger" asp-validation-for="contactUsEmail.Message"></span>
                </div>
                <div class="my-3">

                    @* <div class="loading">Loading</div>
                    <div class="error-message"></div>
                    <div class="sent-message">Your message has been sent. Thank you!</div>*@
                </div>
                <div class="text-center"><button type="submit">Send Message</button></div>
            </form>
            <!--End Contact Form -->

        </div>
    </section>

    <!-- End Contact Section -->

</main>

<!-- End #main -->
