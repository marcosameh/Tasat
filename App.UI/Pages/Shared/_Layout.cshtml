                            }
                            else
                            {

                                <a href="@link.Link" target="_blank" class="@link.CssClass"><i class="bi bi-@link.CssClass"></i></a>
                            }

                        }

                    </div>
                </div>

            </div>
        </div>

        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong><span><localize key="RestaurantName" /></span></strong>. All Rights Reserved
            </div>
            <div class="credits">
                <!-- All the links in the footer should remain intact. -->
