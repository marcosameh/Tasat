<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">
        <div class="container d-flex align-items-center justify-content-between">

            <a href="" class="logo d-flex align-items-center me-auto me-lg-0">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <!-- <img src="assets/img/logo.png" alt=""> -->
                <h1><localize key="RestaurantName" /><span>.</span></h1>
            </a>

            <nav id="navbar" class="navbar">
                <ul>
                    <li><a href="#hero"> <localize key="Home" /></a></li>
                    <li><a href="#about"> <localize key="About" /></a></li>
                    <li><a href="#menu"> <localize key="Menu" /></a></li>
                    <li><a href="#events"> <localize key="Events" /></a></li>
                    <li><a href="#chefs"> <localize key="Team" /></a></li>
                    <li><a href="#gallery"> <localize key="Gallery" /></a></li>

                </ul>
            </nav>

            <a class="btn-book-a-table" href="#contact"> <localize key="Contact Us" /></a>
            <i class="mobile-nav-toggle mobile-nav-show bi bi-list"></i>
            <i class="mobile-nav-toggle mobile-nav-hide d-none bi bi-x"></i>

        </div>
    </header><!-- End Header -->
    @RenderBody()
    <!-- ======= Footer ======= -->
    <footer id="footer" class="footer">

        <div class="container">
            <div class="row gy-3">
                <div class="col-lg-3 col-md-6 d-flex">
                    <i class="bi bi-geo-alt icon"></i>
                    <div>
                        <h4> <localize key="Address" /></h4>
                        <p>
                            @bussinessInfo.Address
                        </p>
                    </div>

                </div>

                <div class="col-lg-3 col-md-6 footer-links d-flex">
                    <i class="bi bi-telephone icon"></i>
                    <div>
                        <h4><localize key="Contact Us" /></h4>
                        <p>
                            @foreach (var phone in bussinessInfo.PhoneNumbers)
                            {

                                <strong>Phone:</strong>

                                @phone.FormattedNumber

                                <br>
                            }
                            <strong>Email:</strong> @bussinessInfo.ContactUsEmail<br>
                        </p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 footer-links d-flex">
                    <i class="bi bi-clock icon"></i>
                    <div>
                        <h4><localize key="Opening Hours" /></h4>
                        <p>
                            @*<strong>Mon-Sat: 11AM</strong> - 23PM<br>
                            Sunday: Closed*@
                            @Html.Raw(bussinessInfo.OpeningHours)
                        </p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 footer-links">
                    <h4> <localize key="Follow Us" /></h4>
                    <div class="social-links d-flex">
                        @foreach (var link in businessInfoManager.GetSocialLinks())
                        {
                            if (string.IsNullOrEmpty(link.CssClass))
